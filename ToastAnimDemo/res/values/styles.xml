<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="anim_view">
        <item name="@android:windowEnterAnimation">@anim/anim_in</item>
    </style>

    <!-- 自定义的Toast动画 -->
    <style name="Lite.Animation.Toast" parent="@android:style/Animation.Toast">
        <item name="android:windowEnterAnimation">@anim/lite_toast_enter</item>
        <item name="android:windowExitAnimation">@anim/lite_toast_exit</item>
    </style>

    <!-- 自定义动画 -->
    <style name="toastAnim" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/toast_enter</item>
        <item name="android:windowExitAnimation">@anim/toast_exit</item>
    </style>

</resources>